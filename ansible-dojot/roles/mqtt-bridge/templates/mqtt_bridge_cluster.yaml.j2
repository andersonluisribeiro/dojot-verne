apiVersion: apps/v1
kind: Deployment
metadata:
  name: mqtt_bridge-verne
  namespace: {{ dojot_namespace }}
spec:
  minReadySeconds: 30
  selector:
    matchLabels:
      app: mqtt_bridge-verne
  replicas: 1
  template: #templates for the pods
    metadata:
      labels:
        app: mqtt_bridge-verne
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: kubernetes.io/hostname
                operator: NotIn
                values:
                - verne-kafka
      containers:
      - name: mqtt_bridge-verne
        image: muhamedavila/mqtt_bridge
        env:
        - name: AUTH_URL
          value: "http://auth:5000"
        - name: DATA_BROKER
          value: "http://data-broker"
        - name: DATA_BROKER_DNS
          value: "data-broker"
        - name: DATA_BROKER_PORT
          value: "80"
        - name: KAFKA_HOSTS
          value: "kafka-server:9092"
        - name: DOJOT_MQTT_HOST
          value: "vernemq-k8s"
        - name: DOJOT_MQTT_PORT
          value: "8883"
        - name: CERT_DNS
          value: "mqtt-bridge"
        - name: CERT_EJBCA_API_BROKER
          value: "ejbca-simple"
        - name: CERT_EJBCA_API_PORT
          value: "5583"