apiVersion: v1
kind: Service
metadata:
  name: ejbca-simple
  namespace: {{ dojot_namespace }}
spec:
  type: ClusterIP
  selector:
    app: ejbca-simple
  ports:
  - name: ejbca-simple
    port: 5583
---
apiVersion: v1
kind: Service
metadata:
  name: ejbca-simple

spec:
  # This defines which pods are going to be represented by this Service
  # The service becomes a network endpoint for either other services
  # or maybe external users to connect to (eg browser)
  selector:
    app: ejbca-simple

  ports:
    - name: ejbca
      port: 5583
      nodePort: 30020

  type: NodePort
