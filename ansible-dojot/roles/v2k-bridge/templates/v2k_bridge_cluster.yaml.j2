apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: v2k-bridge-verne
  namespace: {{ dojot_namespace }}
spec:
  serviceName: "v2k-bridge-verne"
  selector:
    matchLabels:
      app: v2k-bridge-verne
  replicas: 4
  template: #templates for the pods
    metadata:
      labels:
        app: v2k-bridge-verne
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: kubernetes.io/hostname
                operator: NotIn
                values:
                - verne-kafka
      containers:
      - name: v2k-bridge-verne
        image: jonaphael/v2k-bridge
        env:
        - name: AUTH_URL
          value: "http://auth:5000"
        - name: DATA_BROKER
          value: "http://data-broker"
        - name: DATA_BROKER_DNS
          value: "data-broker"
        - name: DATA_BROKER_PORT
          value: "80"
        - name: KAFKA_HOSTS
          value: "kafka-server:9092"
        - name: DOJOT_MQTT_HOST
          value: "vernemq-k8s"
        - name: DOJOT_MQTT_PORT
          value: "8883"
        - name: SERVER_HOSTNAME
          value: "mqtt-bridge"
        - name: EJBCA_HOSTNAME
          value: "ejbca-simple"
        - name: EJBCA_PORT
          value: "5583"
        - name: LOG_LEVEL
          value: "info"