kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  namespace: {{ dojot_namespace }}
  name: postgres-pv-claim
  labels:
    app: postgres
spec:
  accessModes:
    - ReadWriteOnce  
  resources:
    requests:
      storage: 2Gi
  storageClassName: {{ dojot_storage_class_name }}
  selector:
    matchLabels:
      db: postgres